@model  mallform.ViewModel.InvoiceViewModel
@{
    ViewBag.Title = "EditInvoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><strong>Edit Invoice</strong></h2>

@using (Html.BeginForm("Create", "Rent"))
{

   

    <label>
       Invoice Date
    </label>
    @Html.TextBoxFor(x => x.Invoice.CreatedDate, new { @Value = @DateTime.Now.ToShortDateString(), @class = "form-control", @readonly = "readonly" })

    <br />

    @Html.LabelFor(m => m.Invoice.startMonth)
    @Html.TextBoxFor(m => m.Invoice.startMonth, "{0:d MMM yyyy}" , new { @class = "form-control", @readonly = "readonly" })
    <br />

    @Html.LabelFor(m => m.Invoice.endMonth)
    @Html.TextBoxFor(m => m.Invoice.endMonth, "{0:d MMM yyyy}" , new { @class = "form-control ", @readonly = "readonly" })
    <br />
   
  //  @Html.DropDownListFor(m => m.Invoice.rentId, new SelectList(Model.Rents, "Id", "Amount"), "",
 //   new { @class = "form-control", @readonly = "readonly" })
    <br />


    <label style="background-color:blue; padding: 5px 5px 4px 4px;"><strong style="color:white">Invoice Status</strong></label>
    @Html.DropDownListFor(model => model.Invoice.InvoiceStatus, new SelectList(
                  new List<Object>{
                       new { value = 0 , text = "New"  },
                       new { value = 1 , text = "Paid" }
                    },
                  "text",
                  "text",
                   0), new { @class = "form-control" })
    <br />

    <label>
        Monthly Discount:
    </label>
    @Html.TextBoxFor(model => model.Invoice.invoiceDiscount, new { @class = "form-control", type = "number" ,@readonly = "readonly"})
    <br />

    <label>Total Amount</label>
    @Html.TextBoxFor(m=>m.Invoice.totalAmount , new { @class= "form-control" , @readonly = "readonly"})
    <br />
    @Html.LabelFor(m => m.Invoice.Discription)
    @Html.TextBoxFor(m => m.Invoice.Discription, new { @class = "form-control", @readonly = "readonly" })

    <br />

    @Html.HiddenFor(m => m.Invoice.Id)
   
    <button type="submit" class="btn btn-primary">Save</button>
}