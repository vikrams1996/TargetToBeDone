@model IEnumerable<mallform.Models.Unit>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><strong>Unit List</strong></h2>
<br>

    @Html.ActionLink("Add Unit", "AddUnit", "Unit", null, new { @class = "btn btn-primary btn-large" })
<br>
<br>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Shop Size (In Square Feet)</th>
            <th scope="col">Floor</th>
            <th scope="col">Shop Number</th>
         
        </tr>
    </thead>
    @foreach (var unit in Model)
    {



        <tbody>
            <tr>
                
                <td>@unit.Size</td>
                <td>@unit.Floor.Name</td>
                <td>@unit.Shop.Name</td>
                <td>@Html.ActionLink("Edit Unit", "Edit", "Unit", new { id = unit.Id }, null)</td>
                <td>@Html.ActionLink("Delete", "Delete", "Unit", new { id =unit.Id }, null)</td>
               
              
                






            </tr>
        </tbody>





    }
</table>